<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/ticketFilterViewFliper">
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/ticket_filter_background_color">
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/ticket_filter_bar_color">

        <TextView
            android:id="@+id/event_info_textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Filter Tickets"
            android:textStyle="normal"
            android:textColor="@color/ticket_filter_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/event_info_close_textView2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.09"
			android:src="@drawable/dilog_close"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

  <!--    <View
         android:id="@+id/view1"
         android:layout_width="match_parent"
         android:layout_height="1dp" 
         android:background="@color/light_holo_blue"/> -->

        <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="match_parent"
         android:layout_height="match_parent" >
        <LinearLayout android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical" >
            <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Price:"
             android:textColor="@color/ticket_filter_text_color"
             android:textStyle="normal"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"
             android:textAppearance="?android:attr/textAppearanceMedium"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp"            
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:orientation="horizontal">

             <TextView
                android:id="@+id/ticket_min_price_textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:text="Min"
                 android:gravity="center"
                 android:textColor="@color/ticket_filter_text_color"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <LinearLayout
                 android:id="@+id/ticket_price_range_linearLayout"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1">                
             </LinearLayout>

             <TextView
                 android:id="@+id/ticket_max_price_textView1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Max"
                 android:gravity="center"
                 android:textColor="@color/ticket_filter_text_color"
                 android:layout_marginLeft="5dp"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

         </LinearLayout>
         <View
             android:id="@+id/view2"
             android:layout_width="wrap_content"
             android:layout_height="0.02dp"
           	 android:layout_marginTop="5dp"
             android:background="@color/ticket_filter_bar_color" />
       <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp" 
             android:layout_marginLeft="10dp"             
             android:layout_marginRight="10dp"
             android:gravity="center_vertical"
             android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView9"
                  android:layout_width="0dp"
                  android:layout_weight="0.6"
                  android:layout_height="wrap_content"
                  android:text="Number of Ticket Available:"
                  android:gravity="center_vertical"
                   android:textColor="@color/ticket_filter_text_color"
                  android:textAppearance="?android:attr/textAppearanceMedium" />

              <LinearLayout   android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:id="@+id/select_ticket_count">
                <TextView
                  android:id="@+id/tickets_number_show_textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Any" 
                  android:textSize="20sp"
                  android:textColor="@color/ticket_filter_text_color"/>

              <ImageView
                  android:id="@+id/imageView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/right_arrow" />
              </LinearLayout>

            
         </LinearLayout>
          <View
             android:id="@+id/view2"
             android:layout_width="wrap_content"
             android:layout_height="0.02dp"
           	 android:layout_marginTop="5dp"
             android:background="@color/ticket_filter_divider_color" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp" 
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:gravity="center_vertical"
             android:orientation="horizontal">

             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="0dp"
                 android:layout_weight="0.6"
                 android:layout_height="wrap_content"
                 android:text="Show Only E-Ticket..."
                 android:textColor="@color/ticket_filter_text_color"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <CheckBox
                 android:id="@+id/e_ticket_checkBox1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:button="@drawable/checkbox_unselect_bg"/>
            
         </LinearLayout>
          <View
             android:id="@+id/view2"
             android:layout_width="wrap_content"
             android:layout_height="0.02dp"
           	 android:layout_marginTop="5dp"
             android:background="@color/ticket_filter_divider_color" />
          <TextView
              android:id="@+id/textView10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Ticket Type Information"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:textColor="@color/ticket_filter_text_color"
              android:textAppearance="?android:attr/textAppearanceMedium" />
          
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content" 
              android:orientation="horizontal"
              android:layout_marginTop="10dp">

              <ImageView
                  android:id="@+id/email_setting_imageView1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:src="@drawable/e_ticket_icon" />

              <ImageView
                  android:id="@+id/instant_setting_imageView2"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:src="@drawable/instant_ticket_icon" />

              <ImageView
                  android:id="@+id/hotal_setting_imageView3"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:src="@drawable/package_icon" />

              <ImageView
                  android:id="@+id/docter_setting_imageView4"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:src="@drawable/hotel_icon" />

              <ImageView
                  android:id="@+id/parking_setting_imageView5"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="0.2"
                  android:src="@drawable/parking_pass_included_icon" />

          </LinearLayout>

          <TextView
              android:id="@+id/message_ticket_textView11"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/emailticketMess"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="5dp"
              android:textColor="@color/ticket_filter_text_color"
              android:textSize="15sp"/>
          <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="20dp"
              android:orientation="horizontal"
              android:gravity="center">
          
          <Button android:id="@+id/ticket_apply_filter_button"
              android:layout_width="wrap_content"
              android:layout_height="50dp"             
              android:layout_marginRight="30dp"
              android:layout_marginLeft="30dp"
              android:text="Apply Filters"
              android:textColor="@color/ticket_filter_button_text_color"
              android:background="@drawable/event_information_get_directions_btn"/>
          </LinearLayout>
          
           <View
             android:id="@+id/view2"
             android:layout_width="wrap_content"
             android:layout_height="20dp"/>
        </LinearLayout>

      </ScrollView>
   
	</LinearLayout>

 </ViewFlipper>