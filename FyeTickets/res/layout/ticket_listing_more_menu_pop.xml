<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/ticket_more_info_background_color">

    <TextView
        android:id="@+id/retun_to_event_page_textView1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:text="Event Information"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp" 
        android:background="@color/ticket_more_info_background_divider_color"/>

    <TextView
        android:id="@+id/see_the_direction_textView2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:textColor="@color/ticket_more_info_text_color"
        android:text="Get Directions"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp" 
        android:background="@color/ticket_more_info_background_divider_color"/>
    <TextView
        android:id="@+id/return_to_venue_page_textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:textColor="@color/ticket_more_info_text_color"
        android:text="More Event at this Venue"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp" 
        android:background="@color/ticket_more_info_background_divider_color"/>
    <RelativeLayout android:id="@+id/list_of_porformer_textView3"
        android:layout_width="match_parent"
        android:layout_height="25dp" 
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/moreperformerinfo_textView4"
            android:layout_width="wrap_content"
            android:textColor="@color/ticket_more_info_text_color"
            android:layout_height="wrap_content"
            android:text="More For this Performer"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/more_performer_imageView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/down_arrow" />

    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp" 
        android:background="@color/ticket_more_info_background_divider_color"/>
   
  
	<ListView
	    android:id="@+id/performer_listview_listView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	</ListView>

</LinearLayout>
