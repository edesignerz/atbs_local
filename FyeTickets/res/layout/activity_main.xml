<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" 
    android:id="@+id/activity_main_view">

 	<LinearLayout
 	    android:id="@+id/relativeLayout1"
 	    android:layout_width="match_parent"
 	    android:layout_height="70dp"
 	    android:layout_alignParentLeft="true"
 	    android:layout_alignParentRight="true"
 	    android:layout_alignParentTop="true"
 	    android:background="@drawable/action_bar"
 	    android:orientation="horizontal" >

     <LinearLayout android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:paddingLeft="5dp">
         <ImageView
            android:id="@+id/location_search_imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button" />
         <ImageView
            android:id="@+id/left_buton_imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_bar_logo" />
     </LinearLayout>
     <LinearLayout android:id="@+id/custom_spinner_layout"
         	android:layout_width="wrap_content"          
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:gravity="center_vertical"
             android:minWidth="90dp"
             android:layout_toLeftOf="@+id/action_option_item"
             style="@style/MySpinnerDropDownItem"
             android:layout_marginLeft="10dp"
             android:layout_marginBottom="5dp">
         <TextView
             android:id="@+id/spinner_title_textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textStyle="normal"
             android:text="All Tickets"
             android:textColor="@color/main_page_type_of_select_title_text_color"
             android:lines="1"
             android:paddingRight="5dp"
             android:ellipsize="end"
             android:textSize="20sp"
             android:textAppearance="?android:attr/textAppearanceMedium" />

         <LinearLayout android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <TextView
             android:id="@+id/main_location_textView2"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.8"
             android:text="Atlanta"
             android:textColor="@color/main_page_type_of_select_subtitle_location_text_color"
             android:lines="1"
             android:textStyle="normal"
             android:ellipsize="end"
             android:textAppearance="?android:attr/textAppearanceSmall" />
         <ImageView 
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
              android:layout_gravity="right"
             android:layout_marginLeft="5dp"
             android:src="@drawable/action_bar_selector"/>
         </LinearLayout>
     </LinearLayout> 

     <RelativeLayout
         android:id="@+id/action_option_item"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="horizontal" >

         <ImageView
             android:id="@+id/event_share_buton_imageView2"
             android:layout_width="37dp"
             android:layout_height="37dp"
             android:layout_alignParentRight="true"
             android:layout_alignTop="@+id/events_search_imageView2"
             android:padding="5dp"
             android:src="@drawable/overflow_menu_button" />

         <ImageView
             android:id="@+id/events_location_search_imageView3"
             android:layout_width="38dp"
             android:layout_height="38dp"
             android:layout_alignTop="@+id/event_share_buton_imageView2"
             android:layout_toLeftOf="@+id/event_share_buton_imageView2"
             android:padding="5dp"
             android:src="@drawable/location_button"
             android:visibility="visible" />

         <ImageView
             android:id="@+id/event_filter_imageView3"
             android:layout_width="38dp"
             android:layout_height="38dp"
             android:layout_alignTop="@+id/events_search_imageView2"
             android:layout_toLeftOf="@+id/events_search_imageView2"
             android:padding="5dp"
             android:src="@drawable/filter_button"
             android:visibility="visible" />

         <ImageView
             android:id="@+id/events_search_imageView2"
             android:layout_width="38dp"
             android:layout_height="38dp"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/events_location_search_imageView3"
             android:padding="5dp"
             android:src="@drawable/search_button"
             android:visibility="visible" />

     </RelativeLayout>

    </LinearLayout>

   <FrameLayout
       android:id="@+id/frame_container"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="63dp"
       android:background="@color/main_page_background_color" >

   </FrameLayout>
       
</RelativeLayout> 
