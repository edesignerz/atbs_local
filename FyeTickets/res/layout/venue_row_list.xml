<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/row_list_">
    <LinearLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/venu_layou_"
    	android:gravity="center"
    	android:orientation="horizontal" >
    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:gravity="center_vertical"
    	    android:orientation="vertical" 
    	    android:layout_marginLeft="8dp">
           <TextView
        	android:id="@+id/venue_name_textView1"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:lines="1"
        	android:ellipsize="end"
        	android:textColor="@color/venue_row_name_text_color"
        	android:text=".38 Special"         	             
        	android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    	  <TextView
        	android:id="@+id/venue_address_textView2"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="#" 
        	android:lines="1"
        	android:ellipsize="end"
        	android:textColor="@color/venue_row_address_text_color"     
        	android:textSize="14sp" />
    	  
    	   <TextView
        	android:id="@+id/venue_next_show_textView2"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="##" 
        	android:lines="1"
        	android:ellipsize="end"
        	android:textColor="@color/venue_row_next_performor_text_color"   
        	android:textSize="14sp" />
    	</LinearLayout>

    	<View
    	    android:id="@+id/venue_favorites_separeter_view1"
    	    android:layout_width="0.2dp"
    	    android:background="@color/venue_row_divider_color"
    	    android:layout_marginLeft="5dp"
    	    android:layout_marginRight="5dp"
    	    android:layout_marginTop="3dp"
    	    android:layout_marginBottom="3dp"
    	    android:layout_height="match_parent" />

<!--     	<ImageView
    	    android:id="@+id/venue_favorite_imageView1"
    	    android:layout_width="35dp"
    	    android:layout_height="35dp"
    	    android:layout_gravity="center_vertical"
    	    android:layout_marginLeft="3dp"
    	    android:layout_marginRight="30dp"
    	    android:src="@drawable/favorite_default" /> -->
    	  <ToggleButton android:id="@+id/venue_favorite_ToggleButton"
			android:layout_width="35dp"
			android:layout_height="35dp" 
		    android:layout_gravity="center_vertical"
		    style="@style/Widget.Button.Toggle"
    	    android:layout_marginLeft="3dp"
    	    android:layout_marginRight="20dp"
   			android:checked="true"				    
			android:textOn=""
			android:textOff=""
			android:text=""/> 

    </LinearLayout>

  <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0.4dp" 
        android:layout_below="@+id/venu_layou_"
        android:layout_marginTop="5dp"
        android:layout_marginRight="18dp"
        android:background="@color/venue_row_divider_color"/> 

</LinearLayout>
