<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 	   
 	    android:layout_width="match_parent"
 	    android:layout_height="70dp"
 	    android:background="@drawable/action_bar"
 	    android:orientation="horizontal" >

     <LinearLayout android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:paddingLeft="5dp"
         android:id="@+id/more_perfo_detail_back">
         
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button" />
         
         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_bar_logo" />
         
     </LinearLayout>

     <TextView
         android:id="@+id/more_info_performer_name_textView1"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="10dp"
         android:lines="1"
         android:ellipsize="end"
         android:layout_toRightOf="@+id/more_perfo_detail_back"
         android:gravity="center_vertical"
         android:textColor="@color/more_performer_detail_title_color"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
    		<ListView 
                android:id="@+id/more_performer_listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:divider="@android:color/transparent"
                android:fastScrollEnabled="true" 
           		android:fastScrollAlwaysVisible="true">
			</ListView>  

</LinearLayout>
