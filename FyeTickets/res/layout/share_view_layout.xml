<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@android:color/transparent"
    android:gravity="right">
    
    <LinearLayout
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/share_view_background_color" >
      
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/social_share_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share On:"
            android:layout_marginLeft="8dp"
            android:textColor="@color/share_view_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:background="@color/share_view_divider_color"
        android:layout_height="0.5dp" 
        android:layout_marginTop="8dp"/>
    <LinearLayout android:id="@+id/facebook_share_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">
         <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/facebook_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:layout_marginLeft="8dp"
            android:textColor="@color/share_view_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:background="@color/share_view_divider_color"
        android:layout_height="0.5dp" 
        android:layout_marginTop="8dp"/>
    <LinearLayout android:id="@+id/twitter_share_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">
         <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/twitter_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:layout_marginLeft="8dp"
            android:textColor="@color/share_view_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:background="@color/share_view_divider_color"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp" />
    <LinearLayout android:id="@+id/mail_share_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">
         <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mail_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="8dp"
            android:textColor="@color/share_view_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:background="@color/share_view_divider_color"
        android:layout_height="0.5dp" 
        android:layout_marginTop="8dp"/>
    <LinearLayout android:id="@+id/message_share_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">
         <ImageView
            android:id="@+id/imageView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/message_icon" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_marginLeft="8dp"
            android:textColor="@color/share_view_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:background="@color/share_view_divider_color"
        android:layout_height="0.5dp" 
        android:layout_marginTop="8dp"/>  
    </LinearLayout>


</LinearLayout>
